---

<Layout>
	<Header client:load /> 
	
	<main class="bg-gray-50 min-h-screen pb-16">
        {/* PAGE HEADER */}
        <div class="bg-primary text-white py-16 relative overflow-hidden">
             <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1485291571150-772bcfc10da5?auto=format&fit=crop&q=80&w=2000')] bg-cover bg-center opacity-10"></div>
             
             <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
                <span class="inline-block bg-secondary text-white px-4 py-1.5 rounded-pill text-xs font-bold mb-4 uppercase tracking-widest shadow-lg">
                     MIGLIORI OFFERTE 2024
                </span>
                <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-4">
                    Noleggio Lungo Termine
                </h1>
                <p class="text-gray-300 text-lg max-w-2xl mx-auto">
                    Scopri la libertà di guidare un'auto nuova senza pensieri. Canone All-Inclusive.
                </p>
             </div>
        </div>

        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-20">
             {/* HORIZONTAL FILTER BAR */}
             <HorizontalFilterBar client:load />

             <div class="mb-8 flex items-end justify-between">
                <div>
                     <h2 class="text-2xl font-bold text-primary">Veicoli in Promozione</h2>
                     <p class="text-gray-500">Auto nuove in pronta consegna o su ordinazione</p>
                </div>
                <div class="hidden md:flex items-center gap-2 text-sm text-gray-500">
                    <span>Ordina per:</span>
                     <select class="bg-transparent font-bold text-primary focus:outline-none cursor-pointer">
                         <option>Più Richiesti</option>
                         <option>Prezzo più basso</option>
                     </select>
                </div>
             </div>

             {/* GRID LAYOUT (3 columns) */}
             <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {NEW_RENTAL_VEHICLES.map((vehicle) => (
                    <div class="h-full">
                        <VehicleCard vehicle={vehicle} client:visible />
                    </div>
                ))}
             </div>

              {/* PAGINATION */}
            <div class="mt-16 flex justify-center">
                <nav class="flex items-center bg-white rounded-full shadow-sm border border-gray-100 px-4 py-2 gap-2">
                        <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-50 hover:text-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
                        </button>
                        <button class="w-10 h-10 flex items-center justify-center rounded-full bg-primary text-white font-bold shadow-md">1</button>
                        <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:bg-gray-50 font-medium">2</button>
                        <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-50 hover:text-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
                        </button>
                </nav>
            </div>
        </div>

    </main>
    <Footer />
</Layout>
