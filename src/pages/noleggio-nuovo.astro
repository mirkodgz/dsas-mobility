    {
        brand: 'PEUGEOT',
        model: '2008',
        version: 'PureTech 100 Active Pack',
        price: 389,
        image: 'https://images.unsplash.com/photo-1549399542-7e3f8b79c341?auto=format&fit=crop&q=80&w=800',
        fuel: 'Benzina',
        transmission: 'Manuale',
        seats: 5,
        available: true
    },
    {
        brand: 'FIAT',
        model: '500 Elettrica',
        version: 'Icon 42kWh',
        price: 349,
        image: 'https://images.unsplash.com/photo-1617788138017-80ad40651399?auto=format&fit=crop&q=80&w=800',
        fuel: 'Elettrica',
        transmission: 'Automatico',
        seats: 4,
        available: true
    },
    {
        brand: 'AUDI',
        model: 'A3 Sportback',
        version: '35 TDI Business',
        price: 550,
        image: 'https://images.unsplash.com/photo-1603584173870-7f23fdae1b7a?auto=format&fit=crop&q=80&w=800',
        fuel: 'Diesel',
        transmission: 'Automatico',
        seats: 5,
        available: false
    },
     {
        brand: 'JEEP',
        model: 'Renegade',
        version: '1.5 e-Hybrid',
        price: 419,
        image: 'https://images.unsplash.com/photo-1632245889029-e41790ad1838?auto=format&fit=crop&q=80&w=800',
        fuel: 'Ibrida',
        transmission: 'Automatico',
        seats: 5,
        available: true
    },
    {
        brand: 'BMW',
        model: 'Serie 1',
        version: '118d MSport',
        price: 620,
        image: 'https://images.unsplash.com/photo-1555215695-3004980adade?auto=format&fit=crop&q=80&w=800',
        fuel: 'Diesel',
        transmission: 'Automatico',
        seats: 5,
        available: true
    },
    {
        brand: 'VOLKSWAGEN',
