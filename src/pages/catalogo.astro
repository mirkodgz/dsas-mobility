// MOCK DATA for catalog (More items)
const CATALOG_VEHICLES = [
    {
        brand: 'FIAT',
        model: 'Panda Hybrid',
        version: '1.0 FireFly 70cv Hybrid',
        price: 249,
        image: 'https://images.unsplash.com/photo-1549317661-bd32c8ce0db2?auto=format&fit=crop&q=80&w=800',
        fuel: 'Ibrida',
        transmission: 'Manuale',
        seats: 4,
        available: true,
        type: 'Noleggio Lungo Termine',
        partner: true
    },
    {
        brand: 'VOLKSWAGEN',
        model: 'T-Roc',
        version: '2.0 TDI SCR Style',
        price: 489,
        image: 'https://images.unsplash.com/photo-1541899481282-d53bffe3c35d?auto=format&fit=crop&q=80&w=800',
        fuel: 'Diesel',
        transmission: 'Automatico',
        seats: 5,
        available: true,
        type: 'Noleggio Lungo Termine',
         partner: true
    },
     {
        brand: 'TESLA',
        model: 'Model 3',
        version: 'RWD Highland',
        price: 599,
        image: 'https://images.unsplash.com/photo-1536700503339-1e4b06520771?auto=format&fit=crop&q=80&w=800',
        fuel: 'Elettrica',
        transmission: 'Automatico',
        seats: 5,
        available: false,
        type: 'Subentro Leasing'
    },
    {
        brand: 'AUDI',
        model: 'Q3 Sportback',
        version: '35 TDI S tronic',
        price: 649,
        image: 'https://images.unsplash.com/photo-1603584173870-7f23fdae1b7a?auto=format&fit=crop&q=80&w=800',
        fuel: 'Diesel Mild Hybrid',
        transmission: 'Automatico',
        seats: 5,
        available: false,
        type: 'Noleggio Lungo Termine'
    },
     {
        brand: 'JEEP',
        model: 'Avenger',
        version: '1.2 Turbo Altitude',
        price: 329,
        image: 'https://images.unsplash.com/photo-1632245889029-e41790ad1838?auto=format&fit=crop&q=80&w=800',
        fuel: 'Benzina',
        transmission: 'Manuale',
        seats: 5,
        available: true,
        type: 'Noleggio Lungo Termine'
    }
];
---

<Layout>
	<Header client:load /> 
	
	<main class="bg-gray-50 min-h-screen pb-16">
        {/* PAGE HEADER */}
        <div class="bg-primary text-white py-12 md:py-20 relative overflow-hidden">
             <div class="absolute top-0 right-0 w-1/3 h-full bg-secondary/10 skew-x-12 transform translate-x-10"></div>
             <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <span class="inline-block bg-white/10 text-secondary px-3 py-1 rounded-pill text-xs font-bold mb-4 border border-white/20">
                     CATALOGO COMPLETO
                </span>
                <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
                    Trova la tua auto ideale
                </h1>
                <p class="text-gray-300 text-lg max-w-2xl">
                    Sfoglia centinaia di offerte di Noleggio a Lungo Termine e Subentro Leasing. Filtra per le tue esigenze.
                </p>
             </div>
        </div>

        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="flex flex-col lg:flex-row gap-8">
                
                {/* SIDEBAR (Desktop: 25%) */}
                <aside class="w-full lg:w-1/4 hidden lg:block">
                    <FilterSidebar client:load />
                </aside>

                {/* MOBILE FILTER TOGGLE (Visible only mobile) */}
                <div class="lg:hidden w-full mb-6">
                    <button class="w-full bg-white border border-gray-200 p-4 rounded-lg flex items-center justify-center gap-2 font-bold text-primary shadow-sm hover:bg-gray-50">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="4" y1="21" y2="14"/><line x1="4" x2="4" y1="10" y2="3"/><line x1="12" x2="12" y1="21" y2="12"/><line x1="12" x2="12" y1="8" y2="3"/><line x1="20" x2="20" y1="21" y2="16"/><line x1="20" x2="20" y1="12" y2="3"/><line x1="1" x2="7" y1="14" y2="14"/><line x1="9" x2="15" y1="8" y2="8"/><line x1="17" x2="23" y1="16" y2="16"/></svg>
                        Apri Filtri di Ricerca
                    </button>
                </div>

                {/* LISTING (75%) */}
                <div class="w-full lg:w-3/4">
                    {/* Sort Bar */}
                    <div class="flex items-center justify-between mb-8 pb-4 border-b border-gray-200">
                        <p class="text-gray-500 font-medium">
                            Trovati <span class="font-bold text-primary">{CATALOG_VEHICLES.length}</span> risultati
                        </p>
                        <div class="flex items-center gap-2">
                             <span class="text-sm text-gray-500 hidden sm:inline">Ordina per:</span>
                             <select class="bg-white border border-gray-200 rounded-md py-1.5 px-3 text-sm font-medium text-gray-700 outline-none focus:border-secondary">
                                 <option>Rilevanza</option>
                                 <option>Prezzo Crescente</option>
                                 <option>Prezzo Decrescente</option>
                             </select>
                        </div>
                    </div>

                    {/* Cards Stack */}
                    <div class="space-y-6">
                        {CATALOG_VEHICLES.map((vehicle) => (
                            <CatalogVehicleCard vehicle={vehicle} client:visible />
                        ))}
                    </div>

                    {/* PAGINATION */}
                    <div class="mt-16 flex justify-center">
                        <nav class="flex items-center bg-white rounded-full shadow-sm border border-gray-100 px-4 py-2 gap-2">
                             <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-50 hover:text-primary transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
                             </button>
                             <button class="w-10 h-10 flex items-center justify-center rounded-full bg-primary text-white font-bold shadow-md">1</button>
                             <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:bg-gray-50 font-medium">2</button>
                             <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:bg-gray-50 font-medium">3</button>
                             <span class="text-gray-400 px-2">...</span>
                             <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-50 hover:text-primary transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
                             </button>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

    </main>
    <Footer />
</Layout>
