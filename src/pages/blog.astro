---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import BlogCard from '../components/BlogCard';

// MOCK DATA for Blog Posts
const BLOG_POSTS = [
    {
        title: 'Noleggio a Lungo Termine vs Leasing: Quale Conviene?',
        excerpt: 'Analisi dettagliata delle differenze fiscali e operative tra le due formule più diffuse per la mobilità aziendale e privata.',
        image: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&q=80&w=800',
        category: 'Guide all\'Acquisto',
        date: '12 Gen 2024',
        author: 'Redazione DSAS'
    },
    {
        title: 'Le Migliori Auto Elettriche del 2024 sotto i 40k',
        excerpt: 'Scopri la nostra selezione dei modelli a zero emissioni più interessanti per rapporto qualità/prezzo disponibili oggi sul mercato.',
        image: 'https://images.unsplash.com/photo-1593941707882-a5bba14938c7?auto=format&fit=crop&q=80&w=800',
        category: 'Recensioni',
        date: '08 Gen 2024',
         author: 'Marco Rossi'
    },
    {
        title: 'Come Funziona il Subentro Leasing?',
        excerpt: 'Tutto quello che devi sapere per uscire anticipatamente dal tuo contratto o subentrare in uno esistente risparmiando.',
        image: 'https://images.unsplash.com/photo-1560179707-f14e90ef3623?auto=format&fit=crop&q=80&w=800',
        category: 'Tutorial',
        date: '05 Gen 2024',
         author: 'Redazione DSAS'
    },
    {
        title: 'Manutenzione Auto: Cosa è Incluso nel Canone?',
        excerpt: 'Facciamo chiarezza su quali interventi ordinari e straordinari sono coperti dalla tua rata mensile di noleggio.',
        image: 'https://images.unsplash.com/photo-1487754180451-c456f719a1fc?auto=format&fit=crop&q=80&w=800',
        category: 'Guide',
        date: '28 Dic 2023',
         author: 'Luigi Verdi'
    },
     {
        title: 'Fiscalità Auto Aziendali 2024: Le Novità',
        excerpt: 'Aggiornamento sulle deducibilità e detrazioni per le flotte aziendali secondo l\'ultima Legge di Bilancio.',
        image: 'https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?auto=format&fit=crop&q=80&w=800',
        category: 'Fiscalità',
        date: '15 Dic 2023',
         author: 'Comm. Commercialista'
    },
    {
        title: 'I 5 SUV più richiesti dalle Famiglie Italiane',
        excerpt: 'Spazio, comfort e sicurezza: ecco la classifica dei SUV preferiti per chi cerca l\'auto perfetta per la famiglia.',
        image: 'https://images.unsplash.com/photo-1519641471654-76ce0107ad1b?auto=format&fit=crop&q=80&w=800',
        category: 'Classifiche',
        date: '10 Dic 2023',
         author: 'Redazione DSAS'
    }
];

const FEATURED_POST = {
    title: 'Mobilità Sostenibile: Il Futuro è Adesso',
    excerpt: 'Come la transizione ecologica sta cambiando il modo in cui ci spostiamo e perché il noleggio è la chiave per accedere alle nuove tecnologie senza rischi.',
    image: 'https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?auto=format&fit=crop&q=80&w=1600',
    category: 'Sostenibilità',
    date: '15 Gen 2024',
    author: 'Direttore DSAS'
};
---

<Layout>
	<Header client:load /> 
	
	<main class="bg-gray-50 min-h-screen pb-16">
        {/* FEATURED POST HERO */}
        <section class="relative h-[500px] flex items-center justify-center text-white overflow-hidden">
             <div class="absolute inset-0">
                <img 
                    src={FEATURED_POST.image} 
                    alt="Featured Blog Background" 
                    class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-r from-primary/90 to-primary/40"></div>
             </div>
             
             <div class="relative z-10 max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 w-full flex items-center">
                <div class="max-w-2xl">
                    <span class="inline-block bg-secondary text-white px-4 py-1.5 rounded-pill text-xs font-bold mb-6 uppercase tracking-widest shadow-lg">
                        IN EVIDENZA
                    </span>
                    <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6 leading-tight">
                        {FEATURED_POST.title}
                    </h1>
                     <p class="text-gray-200 text-lg md:text-xl mb-8 leading-relaxed border-l-4 border-secondary pl-6">
                        {FEATURED_POST.excerpt}
                    </p>
                    <button class="bg-white text-primary px-8 py-3 rounded-pill font-bold hover:bg-secondary hover:text-white transition-all shadow-lg">
                        LEGGI ARTICOLO
                    </button>
                </div>
             </div>
        </section>

        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-16">
             {/* CATEGORY FILTER (Mockup) */}
             <div class="flex flex-wrap items-center gap-4 mb-12 pb-6 border-b border-gray-200 overflow-x-auto">
                 <button class="px-5 py-2 rounded-full bg-primary text-white font-bold text-sm whitespace-nowrap shadow-md">Tutti</button>
                 <button class="px-5 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-medium text-sm hover:border-secondary hover:text-secondary whitespace-nowrap transition-colors">Guide all'Acquisto</button>
                 <button class="px-5 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-medium text-sm hover:border-secondary hover:text-secondary whitespace-nowrap transition-colors">Recensioni</button>
                 <button class="px-5 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-medium text-sm hover:border-secondary hover:text-secondary whitespace-nowrap transition-colors">Fiscalità</button>
                 <button class="px-5 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-medium text-sm hover:border-secondary hover:text-secondary whitespace-nowrap transition-colors">Tutorial</button>
             </div>

             {/* BLOG GRID */}
             <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
                {BLOG_POSTS.map((post) => (
                    <div class="h-full">
                        <BlogCard post={post} client:visible />
                    </div>
                ))}
             </div>

              {/* PAGINATION */}
            <div class="mt-20 flex justify-center">
                <nav class="flex items-center bg-white rounded-full shadow-sm border border-gray-100 px-4 py-2 gap-2">
                        <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-50 hover:text-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
                        </button>
                        <button class="w-10 h-10 flex items-center justify-center rounded-full bg-primary text-white font-bold shadow-md">1</button>
                        <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:bg-gray-50 font-medium">2</button>
                        <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:bg-gray-50 font-medium">3</button>
                        <span class="text-gray-400 px-2">...</span>
                        <button class="w-10 h-10 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-50 hover:text-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
                        </button>
                </nav>
            </div>
        </div>

    </main>
    <Footer />
</Layout>
