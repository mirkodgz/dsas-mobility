---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';

---

<Layout>
	<Header client:load /> 
	
	<main>
		{/* HERO SECTION */}
		<section class="relative bg-primary py-20 text-white overflow-hidden">
             {/* Background Decoration */}
             <div class="absolute top-0 right-0 w-1/3 h-full bg-secondary/10 skew-x-12 transform translate-x-12"></div>
             <div class="absolute -bottom-12 -left-12 w-48 h-48 bg-secondary/20 rounded-full blur-2xl"></div>

			<div class="relative max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 text-center pt-8">
                <span class="inline-block bg-white/10 text-secondary px-4 py-1.5 rounded-pill text-xs font-bold mb-6 border border-white/20 uppercase tracking-wider animate-fade-in">
                    PARLA CON NOI
                </span>
				<h1 class="text-4xl lg:text-6xl font-bold tracking-tight mb-6 animate-fade-in-up">
					Siamo qui per <span class="text-secondary">AIUTARTI</span>
				</h1>
				<p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed animate-fade-in-up delay-100">
					Hai domande sul noleggio? Vuoi un preventivo personalizzato? 
                    Il nostro team è a tua disposizione per qualsiasi richiesta.
				</p>
			</div>
		</section>

        {/* MAIN CONTENT GRID */}
        <section class="py-16 lg:py-24 bg-gray-50 relative -mt-12 z-20">
            <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid lg:grid-cols-12 gap-8 lg:gap-12">
                    
                    {/* LEFT COLUMN: INFO CARDS */}
                    <div class="lg:col-span-4 space-y-6">
                        {/* PHONE CARD */}
                        <div class="bg-white p-8 rounded-[24px] shadow-soft border border-gray-100 hover:shadow-lg transition-all duration-300 group">
                            <div class="w-12 h-12 bg-primary/5 rounded-2xl flex items-center justify-center text-primary mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                            </div>
                            <h3 class="text-xl font-bold text-primary mb-2">Chiamaci</h3>
                            <p class="text-gray-500 text-sm mb-4">Lun-Ven dalle 9:00 alle 18:00</p>
                            <a href="tel:+39021234567" class="text-2xl font-bold text-secondary hover:text-orange-600 transition-colors block">
                                02 123 4567
                            </a>
                        </div>

                        {/* EMAIL CARD */}
                        <div class="bg-white p-8 rounded-[24px] shadow-soft border border-gray-100 hover:shadow-lg transition-all duration-300 group">
                             <div class="w-12 h-12 bg-primary/5 rounded-2xl flex items-center justify-center text-primary mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                            </div>
                            <h3 class="text-xl font-bold text-primary mb-2">Scrivici</h3>
                            <p class="text-gray-500 text-sm mb-4">Rispondiamo solitamente in 24h</p>
                             <a href="mailto:info@dsasmobility.it" class="text-xl font-bold text-secondary hover:text-orange-600 transition-colors block break-words">
                                info@dsasmobility.it
                            </a>
                        </div>

                         {/* ADDRESS CARD */}
                        <div class="bg-white p-8 rounded-[24px] shadow-soft border border-gray-100 hover:shadow-lg transition-all duration-300 group">
                             <div class="w-12 h-12 bg-primary/5 rounded-2xl flex items-center justify-center text-primary mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                            </div>
                            <h3 class="text-xl font-bold text-primary mb-2">Vienici a trovare</h3>
                            <p class="text-gray-500 text-sm mb-4">Previo appuntamento</p>
                            <p class="text-lg font-bold text-gray-800">
                                Via Roma 123<br/>
                                20121 Milano (MI)
                            </p>
                        </div>
                    </div>

                    {/* RIGHT COLUMN: CONTACT FORM */}
                    <div class="lg:col-span-8">
                        <div class="bg-white rounded-[32px] shadow-xl p-8 lg:p-12 relative overflow-hidden">
                            <div class="absolute top-0 right-0 w-32 h-32 bg-secondary/5 rounded-bl-full"></div>
                            
                            <h2 class="text-3xl font-bold text-primary mb-8">Inviaci un Messaggio</h2>
                            
                            <form id="contactForm" class="space-y-6">
                                <div class="grid md:grid-cols-2 gap-6">
                                    <div class="space-y-2">
                                        <label for="name" class="text-sm font-bold text-gray-700 ml-1">Nome</label>
                                        <input type="text" id="name" name="name" required placeholder="Il tuo nome" class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-all" />
                                    </div>
                                    <div class="space-y-2">
                                        <label for="surname" class="text-sm font-bold text-gray-700 ml-1">Cognome</label>
                                        <input type="text" id="surname" name="surname" required placeholder="Il tuo cognome" class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-all" />
                                    </div>
                                </div>

                                <div class="grid md:grid-cols-2 gap-6">
                                    <div class="space-y-2">
                                        <label for="email" class="text-sm font-bold text-gray-700 ml-1">Email</label>
                                        <input type="email" id="email" name="email" required placeholder="nome@esempio.it" class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-all" />
                                    </div>
                                    <div class="space-y-2">
                                        <label for="phone" class="text-sm font-bold text-gray-700 ml-1">Telefono</label>
                                        <input type="tel" id="phone" name="phone" required placeholder="+39 ..." class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-all" />
                                    </div>
                                </div>

                                <div class="space-y-2">
                                    <label for="subject" class="text-sm font-bold text-gray-700 ml-1">Oggetto</label>
                                    <select id="subject" name="subject" required class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-all appearance-none">
                                        <option value="" disabled selected>Seleziona un motivo</option>
                                        <option value="lungo_termine">Noleggio Lungo Termine</option>
                                        <option value="breve_termine">Noleggio Breve Termine</option>
                                        <option value="acquisto_auto">Acquisto Auto</option>
                                        <option value="altro">Altro / Informazioni</option>
                                    </select>
                                </div>

                                <div class="space-y-2">
                                    <label for="message" class="text-sm font-bold text-gray-700 ml-1">Messaggio</label>
                                    <textarea id="message" name="message" required rows="5" placeholder="Scrivi qui la tua richiesta..." class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-all resize-none"></textarea>
                                </div>

                                <div class="pt-4 flex flex-col md:flex-row items-center gap-6">
                                    <button type="submit" id="submitBtn" class="w-full md:w-auto bg-gradient-to-r from-[#0060DF] to-[#8B4CFC] text-white px-10 py-4 rounded-full font-bold hover:opacity-90 transition-all shadow-lg hover:shadow-[#8B4CFC]/30 transform hover:-translate-y-1 disabled:opacity-50 disabled:cursor-not-allowed">
                                        Invia Messaggio
                                    </button>
                                    <p class="text-xs text-gray-400 max-w-xs text-center md:text-left">
                                        Cliccando su Invia accetti la nostra <a href="#" class="underline hover:text-gray-600">Privacy Policy</a>.
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>



	</main>
    
    <Footer />
</Layout>

<script>
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Set loading state
            const originalText = submitBtn.innerText;
            submitBtn.innerText = 'Invio in corso...';
            submitBtn.disabled = true;

            // Gather data
            const formData = new FormData(form);
            const data = {
                leadType: 'contact',
                user: {
                    name: formData.get('name'),
                    surname: formData.get('surname'),
                    email: formData.get('email'),
                    phone: formData.get('phone'),
                    subject: formData.get('subject'),
                    message: formData.get('message'),
                    type: 'private' // Default for generic contact
                }
            };

            try {
                const response = await fetch('/api/leads', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    alert('Messaggio inviato con successo! Ti risponderemo al più presto.');
                    form.reset();
                } else {
                    throw new Error(result.error || 'Errore durante l\'invio');
                }
            } catch (error) {
                console.error('Error submitting form:', error);
                alert('Si è verificato un errore. Per favore riprova o contattaci telefonicamente.');
            } finally {
                // Reset loading state
                submitBtn.innerText = originalText;
                submitBtn.disabled = false;
            }
        });
    }
</script>
